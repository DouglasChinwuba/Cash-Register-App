<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.CompanyInfoController"
            prefHeight="200.0" prefWidth="400.0">

    <content>
        <GridPane hgap="5" vgap="10">
            <Label text="Enter Company name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="companyNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <Label text="Enter Company address:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="companyAddressField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Enter Company phone-number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="companyPhoneNumberField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Enter Company email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="companyEmailField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>
    </content>

</DialogPane>
